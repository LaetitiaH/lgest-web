{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": ["plugin:vue/essential", "standard"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "plugins": ["vue", "html"],
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "single"],
        "indent": ["error", 4],
        "space-before-function-paren": ["error", "never"],
        "comma-dangle": ["error", "always-multiline"]
    }
}
